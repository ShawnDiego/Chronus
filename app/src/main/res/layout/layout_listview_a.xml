<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/list_img"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            tools:srcCompat="@mipmap/lise_icon5"
            android:paddingStart="8dp"
            />

        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:baselineAlignBottom="true"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="提醒事项"
            android:textAlignment="center"
            android:textColor="#1D1D1C"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/list_img"/>



        <TextView
            android:id="@+id/list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="11"
            android:textColor="#B4B4B9"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_inf"/>

        <ImageView
            android:id="@+id/list_inf"
            android:layout_width="19sp"
            android:layout_height="20sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:paddingRight="2dp"
            app:srcCompat="@mipmap/to_right" />


    </RelativeLayout>
</LinearLayout>